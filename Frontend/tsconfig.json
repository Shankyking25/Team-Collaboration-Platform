{
  "compilerOptions": {
    "jsx": "react-jsx",

   "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
 // "files": [],

  "include": ["src"],

  "references": [
  //  { "path": "./tsconfig.app.json" },
  //  { "path": "./tsconfig.node.json" }
  ]
}
